{
  "name": "[SensioTV] Dev",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "VARIANT": "8.1"
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/node:1": {"version": "lts/*"},
    "ghcr.io/devcontainers/features/sshd:1": {}
  },
  "containerEnv": {
    "APP_ENV": "dev",
    "DATABASE_URL": "sqlite:///%kernel.project_dir%/var/dev.db"
  },
  "onCreateCommand": {
    "yarn": ["yarn", "install", "&&", "yarn", "build"],
    "composer": ["composer", "install"]
  },
  "postCreateCommand": {
    "database": ["init_database.sh"]
  },
  "postStartCommand": {
    "server": ["symfony", "server:start", "--daemon", "--no-tls", "--port", "8000"]
  },
  "portsAttributes": {
    "8000": {
      "label": "Application",
      "onAutoForward": "openBrowserOnce"
    }
  },
  "forwardPorts": ["8000"]
}
